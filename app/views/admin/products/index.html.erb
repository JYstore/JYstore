<h2> Product List </h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增产品", new_admin_product_path, class: "btn btn-primary btn-sm") %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>quantity</th>
      <th>Price</th>
      <th>操作选项</th>
    </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
  <tr>
  <td>
  <%= link_to(product.title, admin_product_path(product)) %>
  </td>
  <td>
    <%= product.description %>
  </td>
  <td>
    <%= product.quantity %>
  </td>
  <td>
    <%= product.price %>
  </td>
  <td>
    <%= link_to("Edit", edit_admin_product_path(product)) %>
    <%= link_to("Delete", admin_product_path(product),method: :delete, data: {confirm: "Are you firm?"}) %>
  </td>
  <% end %>
</tbody>
</table>
