<h2> 商品列表 </h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增产品", new_admin_product_path, class: "btn btn-primary btn-sm") %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th width="220">商品图片</th>
      <th>名称</th>
      <th>价格</th>
      <th width="100"> 操作选项</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.id %>
          <%= render_product_status(product) %>
        </td>
        <td>
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <%= image_tag(product.image, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td>
          <%= product.title %>
        </td>
        <td>
          <%= product.price %>
        </td>
        <td>
          <%= link_to("编辑", edit_admin_product_path(product)) %><br>
          <%= link_to("删除", admin_product_path(product), method: :delete, data: { confirm: "你确定要删除该商品吗?"} ) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
