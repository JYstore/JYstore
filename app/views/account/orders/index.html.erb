<div class="row">
  <div class="col-3">
    <div class="order-personal-data">
       我的订单
    </div>
  </div>

  <div class="col-9">
    <div class="order-box">
      <div class="order-title">我的订单</div>
        <% @orders.each do |order| %>
          <div class="order-table-title">
                <span class="order-date"><%= order.created_at.strftime("%Y/%m/%d") %></span>
                <span class="order-num">订单号:<%= order.id %></span>
                <span class="order-price">单价</span>
                <span class="order-quantity">数量</span>
                <span class="order-total-price">应付金额</span>
                <span class="order-state"><%= order.aasm_state %></span>
           </div>
           <div class="order-total-state">
             <span class="order-content-total">
             ￥<%= order.total %>.00
             </span>
             <span class="order-total-detail">
               <%= link_to("查看详情", admin_order_path(order)) %>
             </span>
           </div>
           <% order.product_lists.each do |product_list| %>
           <div class="order-table-content">
                <div class="order-content-image">
                 <%= link_to products_path do %>
                  <% if product_list.product_image.present? %>
                    <%= image_tag(product_list.product_image, class: "thumbnail") %>
                  <% else %>
                    <%= image_tag("http://placehold.it/80x80&text=No Pic", class: "thumbnail") %>
                  <% end %>
                 <% end %>
                </div>
                <div class="order-content-name">
                  <%= product_list.product_name %>
                </div>
                <div class="order-content-price">
                  ￥<%= product_list.product_price %>.00
                </div>
                <div class="order-content-quantity">
                  <%= product_list.quantity %>
                </div>
           </div>
           <% end %>
         <% end %>
    </div>
  </div>

</div>
