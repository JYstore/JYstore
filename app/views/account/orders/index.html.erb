<h2>我的订单 </h2>

<div class="orders-title">

      <% @orders.each do |order| %>
      <span><%= order.created_at %></span>
      <span>订单号:</span>
      <span>单价</span>
      <span>数量</span>
      <span>应付金额</span>
      <span><%= order.aasm_state %></span>
      <% end %>
</div>

    <div class="orders-content">
    <% @orders.each do |order| %>
      <% order.product_lists.each do |product_list| %>
       <%= product_list.product_price %>
      <% end %>
    <% end %>
    </div>
