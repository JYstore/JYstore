<div class="devise-box col-md-5">
<h2 class="session-sign-in">登录界面</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label: false, placeholder: '用户名',
                required: false,
                autofocus: true,
                input_html: { class: "session-email", autocomplete: "email"  } %>
    <%= f.input  :password, label: false, placeholder: '密码',
                required: false,
                input_html: { class: "session-password", autocomplete: "current-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "登录", class: "Sign-in-bottom container-fluid" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "注册", new_registration_path(resource_name) %><br/>
<% end %>
</div>
