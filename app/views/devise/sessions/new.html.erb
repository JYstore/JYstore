<div class="devise-box">
<h2 class="session-sign-in">Sign In</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label: false, placeholder: 'Username',
                required: false,
                autofocus: true,
                input_html: { class: "session-email", autocomplete: "email"  } %>
    <%= f.input  :password, label: false, placeholder: 'Password',
                required: false,
                input_html: { class: "session-password", autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in", class: "Sign-in-bottom" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name) %><br />
<% end %>
</div>
