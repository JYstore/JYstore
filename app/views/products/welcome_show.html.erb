<div id="carouselExampleControls" class="carousel slide mt-4" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <div class="container">
        <%= link_to product_path(1), class: "product-path" do %>
        <img src="/images/仙剑轮播图.jpeg"/>
        <span class="image-title"></span>
        <span class="image-description"></span>
        <% end %>
      </div>
    </div>
    <div class="carousel-item">
      <div class="container">
        <%= link_to product_path(2), class: "product-path" do %>
        <img src="/images/国王轮播图.jpeg"/>
        <span class="image-title"></span>
        <span class="image-description"></span>
        <% end %>
      </div>
    </div>
    <div class="carousel-item">
      <div class="container">
        <%= link_to product_path(3), class: "product-path" do %>
        <img src="/images/挽歌轮播图.jpeg"/>
        <span class="image-title"></span>
        <span class="image-description"></span>
        <% end %>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="col-md-12">
  <br><br><br>
    <div class="bigcard">
      <div class="cardname">
       热门游戏
      </div>
      <div class="row">
        <% @product_hots.each do |product| %>
          <div class="col-xs-12 col-xs-3">
            <%= link_to product_path(product), class: "product-path" do %>
            <div class="fathercard">
            <div class="card">
              <% if product.image.present? %>
                <%= image_tag(product.image, class: "thumbnail") %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>
              <ol>
                <div class="title">
                   <%= product.title %>
                </div>
              </ol>
              <ol>
                <div class="description">
                    <%= product.description %>
                </div>
              </ol>
                <div class="price">
                   ￥<%= product.price %>.00
                </div>
            </div>
            </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
</div>

